extends layout

block body
	.register
		.row
			.container
				.col-xs-12
					form(role='form', method='post', action='').form-horizontal
						fieldset
							legend Create a New Account
							if error
								.alert.alert-dismissable.alert-danger.register-fail
									button.close(data-dismiss='alert', type='button') &times;
									p.
										#{error}
							.alert.alert-dismissable.alert-info
								button.close(data-dismiss='alert', type='button') &times;
								strong NOTE:&nbsp;
								Your password must be between 8 and 100 characters, and must contain lowercase letters, uppercase letters, and numbers.
							.form-group
								.col-lg-12
									input#firstname.form-control(name='firstname', type='text', placeholder='First Name', autofocus)
							.form-group
								.col-lg-12
									input#lastname.form-control(name='lastname', type='text', placeholder='Last Name', autofocus)
							.form-group
								.col-lg-12
									input#username.form-control(name='username', type='email', placeholder='Email')
							.form-group
								.col-lg-12
									input#password.form-control(name='password', type='password', placeholder='Password')
							.form-group
								.col-lg-12
									button.btn.btn-primary(type='submit') Register
